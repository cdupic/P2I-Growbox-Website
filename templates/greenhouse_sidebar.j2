<nav id="sidebar" class="to-init">
    <img src="{{ url_for('static', filename='img/title.svg') }}" alt="GrowBox's icon" />
    <ul>
        <form method="POST" action="{{ url_for('processed_measures_manager') }}" class="auto-submit">
            <label class="switch">
                <input type="hidden" name="r" value="{{ request.url }}">
                <input type="checkbox" name="processed_measures" {{ 'checked' if session['processed_measures'] else '' }}>
                <span class="slider round"></span>
            </label>
            <label for="processed_measures">Mesures trait√©es</label>
        </form>
        <li class="{{ 'current' if current_sidebar_item[0] == 'overview' else ''}}">
            <a href="{{ url_for('greenhouse_overview_page', greenhouse_serial=greenhouse_serial) }}">Tableau de bord</a>
        </li>
        <li class="{{ 'current' if current_sidebar_item[0] == 'plants' else ''}}">
            <a href="{{ url_for('greenhouse_plants_page', greenhouse_serial=greenhouse_serial) }}">Plantes</a>
        </li>
        <li class="{{ 'current' if current_sidebar_item[0] == 'collaborator' else ''}}">
            <a href="{{ url_for('greenhouse_collaborator_page', greenhouse_serial=greenhouse_serial) }}">Collaborateurs</a>
        </li>
        <li class="{{ 'current' if current_sidebar_item[0] == 'notification' else ''}}">
            <a href="{{ url_for('greenhouse_notification_page', greenhouse_serial=greenhouse_serial) }}">Notifications</a>
        </li>
        <li class="title">
            <p>Capteurs</p>
        </li>
        {% for (sensor_id, sensor_name) in sidebar_sensors %}
            <li class="indented {{ 'current' if current_sidebar_item == ('sensor', sensor_id) else ''}}">
                <a href="{{ url_for('greenhouse_sensor_page', greenhouse_serial=greenhouse_serial, sensor_id=sensor_id) }}">{{ sensor_name }}</a>
            </li>
        {% endfor %}
        <li class="title">
            <p>Actionneurs</p>
        </li>
        {% for (actuator_id, actuator_name) in sidebar_actuators %}
            <li class="indented {{ 'current' if current_sidebar_item == ('actuator', actuator_id) else ''}}">
                <a href="{{ url_for('greenhouse_actuator_page', greenhouse_serial=greenhouse_serial, actuator_id=actuator_id) }}">{{ actuator_name }}</a>
            </li>
        {% endfor %}


    </ul>
</nav>
